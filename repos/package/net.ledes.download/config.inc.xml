<?xml version="1.0" encoding="UTF-8"?>
<action-mapping>
	<action
		name="list"
		label="Listar Produtos"
		default="true"
		description="">
		<menu action="create" />
		<menu function="search" />
		<menu function="rss" />
	</action>
	
	<action
		name="create"
		label="Criar Produtos"
		description="">
		<menu function="save" />
		<menu action="list" image="close.png" />
	</action>
	
	<action
		name="edit"
		label="Editar Produtos"
		description="">
		<menu function="save" />
		<menu action="list" image="close.png" />
	</action>
	
	<action
		name="delete"
		label="Apagar Produtos"
		description="">
		<menu function="save" image="delete.png" />
		<menu action="list" image="close.png" />
	</action>
	
	<action
		name="view"
		label="Visualizar Produtos"
		description="">
		<menu action="list" />
		<menu function="print" />
		<menu action="edit" />
		<menu action="delete" />
	</action>
	
	<action
		name="file"
		label="Vincular Arquivos a Produtos"
		description="">
		<menu action="list" />
	</action>
</action-mapping>